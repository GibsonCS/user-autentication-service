{
  "compilerOptions": {
    "allowJs": true,
    "checkJs": false,
    "moduleResolution": "node16",
    "target": "ES2022",
    "module": "Node16",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "outDir": "./dist",
    "sourceMap": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
